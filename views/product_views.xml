<odoo>
  <data>
    <!-- Form View -->
    <record id="product_template_form_view" model="ir.ui.view">
      <field name="name">product.template.pos.mrp.form</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_form_view" />
      <field name="arch" type="xml">
        <xpath expr="//field[@name='type']" position="after">
            <field name="manufacture_from_pos" />
        </xpath>
      </field>
    </record>
    <!-- List View -->
    <record id="product_template_tree_view" model="ir.ui.view">
      <field name="name">product.template.pos.mrp.tree</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_tree_view" />
      <field name="arch" type="xml">
        <xpath expr="//field[@name='sale_ok']" position="after">
          <field name="manufacture_from_pos" optional="hide" />
        </xpath>
      </field>
    </record>
  </data>
</odoo>