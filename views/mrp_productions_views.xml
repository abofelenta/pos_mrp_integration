<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="mrp_production_tree_view" model="ir.ui.view">
            <field name="name">mrp.production.pos.list</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_tree_view" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="before">
                    <field name="pos_order_id" optional="hide" />
                </xpath>
            </field>
        </record>


        <record id="mrp_production_form_view" model="ir.ui.view">
            <field name="name">mrp.production.pos.form</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button class="oe_stat_button" name="action_open_pos_order"
                        type="object" icon="fa-wrench"
                        invisible="not pos_order_id">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_value">
                                <field name="pos_order_id" />
                            </span>
                        </div>
                    </button>
                </xpath>

            </field>
        </record>
    </data>
</odoo>